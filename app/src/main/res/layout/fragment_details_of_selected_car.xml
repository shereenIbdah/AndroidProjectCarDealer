<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detailsOfSelectedCarFragment">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car Details"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:gravity="center"
        android:textColor="#FF573345" >
    </TextView>

    <!-- Car Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Factory Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Factory Name"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FF777999"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Display the Factory Name dynamically -->
            <TextView
                android:id="@+id/factoryNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Factory Name Value"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FF777999"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Display the Name dynamically -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Value"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Model -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FF777999"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Display the Model dynamically -->
            <TextView
                android:id="@+id/modelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model Value"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FF777999"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Display the Price dynamically -->
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price Value"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Fuel -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FF777999"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Display the Fuel dynamically -->
            <TextView
                android:id="@+id/fuelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel Value"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#FF777999"
                android:layout_margin="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Display the Fuel dynamically -->
            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel Value"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>

            <!-- Add more details as needed -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>
