<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border_for_admin"
    android:layout_height="match_parent"
    tools:context=".SignUpAsAdmin">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="352dp"
        android:layout_height="470dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538">

        <EditText
            android:id="@+id/email2foradmin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="text" />

        <EditText
            android:id="@+id/firstNameforadmin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="First Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/lastNameforadmin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="LastName"
            android:inputType="text" />

        <Spinner
            android:id="@+id/genderforadmin"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <EditText
            android:id="@+id/password2foradmin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/confirmPasswordforadmin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Coniform Password"
            android:inputType="textPassword" />

        <Spinner
            android:id="@+id/countryforadmin"
            android:layout_width="match_parent"
            android:layout_height="51dp" />

        <Spinner
            android:id="@+id/cityforadmin"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        <EditText
            android:id="@+id/phoneNumberforadmin"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:ems="10"
            android:hint="phoneNumber"
            android:inputType="number" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="191dp"
        android:layout_height="83dp"
        android:text=" Sign Up As Admin"
        android:textColor="#101212"
        android:textAlignment="center"
        android:textColorHint="#009688"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.583" />

    <Button
        android:id="@+id/createaccountforadmin"
        android:layout_width="211dp"
        android:layout_height="62dp"
        android:background="@drawable/btn4"
        android:text="Sign Up"
        android:textColor="#171616"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.362" />

    <Button
        android:id="@+id/back"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:background="@drawable/baseline_keyboard_backspace_24"
        android:textColor="#020202"
        android:text="back"
        android:textSize="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

</androidx.constraintlayout.widget.ConstraintLayout>